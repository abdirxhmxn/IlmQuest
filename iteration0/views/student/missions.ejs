<%- include('../partials/inHeader') -%>
    <style>
        .missions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .mission-card {
            background: #ffffff;
            border-radius: 15px;
            padding: 20px;
            border: 1px solid #d7dce1;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.08);
            transition: 0.2s ease-in-out;
        }

        .mission-card:hover {
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
            transform: translateY(-3px);
        }

        .mission-title {
            font-size: 20px;
            font-weight: bold;
            color: #1b2a4e;
            margin-bottom: 8px;
        }

        .mission-desc {
            font-size: 14px;
            color: #444;
            margin-bottom: 12px;
        }

        .mission-info p {
            font-size: 14px;
            margin: 2px 0;
        }

        .mission-footer {
            font-size: 12px;
            color: #666;
            margin-top: 12px;
            border-top: 1px solid #eee;
            padding-top: 8px;
        }

        .select-mission {
            height: 50px;
            float: right;
            cursor: pointer;
        }

        .rank {
            padding: 8px 14px;
            border-radius: 8px;
            border: 1px solid #ccc;
            background: #f5f5f5;
            font-size: 14px;
            cursor: pointer;
            margin-right: 6px;
        }

        .rank.active-rank {
            background: #1b2a4e;
            color: white;
            border-color: #1b2a4e;
        }

        .modal-overlay {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.55);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 999;
        }

        .modal {
            background: white;
            padding: 25px;
            width: 90%;
            max-width: 500px;
            border-radius: 12px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.25);
            animation: fadeIn 0.2s ease-in-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(15px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .close-btn {
            float: right;
            cursor: pointer;
            background: #c62828;
            color: white;
            border: none;
            padding: 6px 10px;
            border-radius: 6px;
        }

        .begin-btn {
            float: right;
            cursor: pointer;
            background: #28b442;
            color: white;
            border: none;
            padding: 6px 10px;
            border-radius: 6px;
        }

        .missions-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            font-size: 14px;
            background: #fff;
            border: 1px solid #d7dce1;
            border-radius: 10px;
            overflow: hidden;
        }

        .missions-table thead {
            background: #1b2a4e;
            color: white;
            text-align: left;
        }

        .missions-table th {
            padding: 12px;
            font-weight: 600;
            letter-spacing: 0.3px;
        }

        .missions-table td {
            padding: 12px;
            border-bottom: 1px solid #e5e5e5;
        }

        .missions-table tr:nth-child(even) {
            background: #f8f9fc;
        }


        .missions-table tbody td {
            color: #333;
        }

        .empty-row {
            text-align: center;
            padding: 20px;
            color: #555;
            font-style: italic;
        }

        .hidden {
            display: none;
        }
    </style>

    <main>
        <h1>My Missions</h1>
        <!-- include current user rank and  current points and current year-->
        <div class="header">
            <h1>
                <%=user.firstName%>
                    <%=user.lastName%>
            </h1>
            <h3>
                <%=user.rank%> Rank
            </h3>
            <h3>Points: <%=user.points%>
            </h3>
        </div>
        <!-- Banner for the mission categories to allow filtering for user selection filters will include ranks as well -->
        <!-- display missions and allow user to select -->
        <div>
            <button class="rank">F Rank</button>
            <button class="rank">E Rank</button>
            <button class="rank">D Rank</button>
            <button class="rank">C Rank</button>
            <button class="rank">B Rank</button>
            <button class="rank">A Rank</button>
            <button class="rank">S Rank</button>
        </div>

        <div class="missions-grid">

            <% missions.forEach(mission=> { %>

                <div class="mission-card" data-rank="<%= mission.rank %>" style="display: none;">
                    <button class="select-mission" data-title="<%= mission.title %>" data-id="<%= mission._id %>"
                        data-desc="<%= mission.description %>" data-type="<%= mission.type %>"
                        data-cat="<%= mission.category %>" data-rank="<%= mission.rank %>"
                        data-xp="<%= mission.pointsXP %>" data-time="<%= mission.timeLimit %>"
                        data-creator="<%= mission.createdBy.name %>">
                        Select
                    </button>
                    <div class="mission-title">
                        <%= mission.title %>
                    </div>

                    <div class="mission-desc">
                        <%= mission.description %>
                    </div>

                    <div class="mission-info">
                        <p><strong>Type:</strong>
                            <%= mission.type %>
                        </p>
                        <p><strong>Category:</strong>
                            <%= mission.category %>
                        </p>
                        <p><strong>Rank:</strong>
                            <%= mission.rank %>
                        </p>
                        <p><strong>XP:</strong>
                            <%= mission.pointsXP %>
                        </p>
                        <p><strong>Time Limit:</strong>
                            <%= mission.timeLimit %>
                        </p>
                    </div>

                    <div class="mission-footer">
                        Created by <strong>
                            <%= mission.createdBy.name %>
                        </strong>
                    </div>

                </div>

                <% }) %>
        </div>
        <div class="modal-overlay" id="missionModal">
            <div class="modal">
                <button class="close-btn" id="closeModal">Close</button>

                <form id="beginForm" method="POST" action="/student/missions/begin?_method=PUT">
                    <input type="hidden" name="missionId" id="beginMissionId">
                    <button type="submit" class="begin-btn">Begin</button>
                </form>
                <h2 id="modalTitle"></h2>
                <p id="modalDescription"></p>
                <div>
                    <p><strong>Type:</strong> <span id="modalType"></span></p>
                    <p><strong>Category:</strong> <span id="modalCategory"></span></p>
                    <p><strong>Rank:</strong> <span id="modalRank"></span></p>
                    <p><strong>XP:</strong> <span id="modalXP"></span></p>
                    <p><strong>Time Limit:</strong> <span id="modalTime"></span></p>
                    <p><strong>Created By:</strong> <span id="modalCreator"></span></p>
                </div>
            </div>
        </div>

        <div>
            <h2>Active Missions:</h2>
            <table class="missions-table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Rank</th>
                        <th>Points</th>
                        <th>Time Limit</th>
                        <th>Due Date</th>
                        <th>Complete</th>
                    </tr>
                </thead>

                <tbody>
                    <% if (activeMissions && activeMissions.length> 0) { %>

                        <% activeMissions.forEach(mission=> { %>
                            <tr>
                                <td>
                                    <%= mission.title %>
                                </td>
                                <td>
                                    <%= mission.description %>
                                </td>
                                <td>
                                    <%= mission.rank %>
                                </td>
                                <td>
                                    <%= mission.pointsXP %>
                                </td>
                                <td>
                                    <%= mission.timeLimit %>
                                </td>
                                <td>
                                    <%= mission.dueDate ? mission.dueDate.toDateString() : "None" %>
                                </td>
                                <td>
                                    <form method="POST" action="/student/missions/complete?_method=PUT">
                                        <input type="hidden" name="missionId" value="<%= mission._id %>">
                                        <button type="submit" class="begin-btn">Complete</button>
                                    </form>

                                </td>
                            </tr>
                            <% }) %>

                                <% } else { %>
                                    <tr>
                                        <td colspan="6" style="text-align:center; padding:10px;">
                                            No active missions yet
                                        </td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>

        </div>

        <!-- live missions vs pending missions -->
        <!-- live missions are missions they are currently working on -->
        <!-- pending missions are missions waiting to be approved and upon approval they will earn their points -->
        <!-- have a leaderboard button that takes them to the leaderboard page  -->
        <!-- leaderboard -->
        <div>
            <h2>Leaderboard</h2>
            <table class="missions-table">
                <thead>
                    <tr>
                        <th>Position</th>
                        <th>Student</th>
                        <th>Rank</th>
                        <th>Points</th>
                    </tr>
                </thead>

                <tbody>
                    <% if (students && students.length> 0) { %>
                        <% students.forEach((student, index)=> { %>
                            <tr>
                                <td>
                                    <%= index + 1 %>
                                </td> <!-- Position -->
                                <td>
                                    <%= student.firstName %>
                                        <%= student.lastName %>
                                </td> <!-- Student -->
                                <td>
                                    <%= student.rank %>
                                </td> <!-- Rank -->
                                <td>
                                    <%= student.points %>
                                </td> <!-- Points -->
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" style="text-align:center; padding:10px;">
                                            No students found
                                        </td>
                                    </tr>
                                    <% } %>
                </tbody>
            </table>

        </div>
    </main>
    <script>
        const modal = document.getElementById("missionModal");
        const closeModal = document.getElementById("closeModal");
        const beginForm = document.getElementById("beginForm");
        const beginMissionId = document.getElementById("beginMissionId");

        const modalTitle = document.getElementById("modalTitle");
        const modalDescription = document.getElementById("modalDescription");
        const modalType = document.getElementById("modalType");
        const modalCategory = document.getElementById("modalCategory");
        const modalRank = document.getElementById("modalRank");
        const modalXP = document.getElementById("modalXP");
        const modalTime = document.getElementById("modalTime");
        const modalCreator = document.getElementById("modalCreator");

        // rank filter (what you already had)
        const rankButtons = document.querySelectorAll('.rank');
        const missionCards = document.querySelectorAll('.missions-grid .mission-card');

        rankButtons.forEach(btn => {
            btn.addEventListener('click', () => {
                const selectedRank = btn.innerText.trim().split(" ")[0];
                rankButtons.forEach(b => b.classList.remove('active-rank'));
                btn.classList.add('active-rank');

                missionCards.forEach(card => {
                    const cardRank = card.dataset.rank;
                    card.style.display = (cardRank === selectedRank) ? "block" : "none";
                });
            });
        });

        // modal + form wiring
        document.querySelectorAll('.select-mission').forEach(btn => {
            btn.addEventListener('click', () => {
                // fill modal text
                modalTitle.innerText = btn.dataset.title;
                modalDescription.innerText = btn.dataset.desc;
                modalType.innerText = btn.dataset.type;
                modalCategory.innerText = btn.dataset.cat;
                modalRank.innerText = btn.dataset.rank;
                modalXP.innerText = btn.dataset.xp;
                modalTime.innerText = btn.dataset.time;
                modalCreator.innerText = btn.dataset.creator;

                // this is what your backend expects
                beginMissionId.value = btn.dataset.id;

                modal.style.display = "flex";
            });
        });
        closeModal.addEventListener('click', () => {
            modal.style.display = "none";
        });
    </script>
    <%- include('../partials/inFooter') -%>