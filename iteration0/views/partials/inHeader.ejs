<header class="flex items-center justify-between bg-gray-900 text-white px-6 py-4 border-b border-gray-700">
    <div class="flex items-center gap-4">
        <button
            class="text-2xl bg-gradient-to-r from-green-500 to-green-700 p-2 rounded-lg shadow">
            ب
        </button>

        <div class="leading-tight">
            <h3 class="text-gray-300 text-sm">Assalāmu ʿalaykum,</h3>
            <h2 class="text-lg font-bold"><%= user.firstName || "Guest" %></h2>
        </div>
    </div>

    <nav class="relative">
        <!-- Hamburger on small screens -->
        <button id="menuBtn" class="md:hidden block text-3xl">☰</button>

        <ul id="menu"
            class="hidden md:flex gap-6 bg-gray-900 absolute md:relative right-0 top-10 md:top-0 p-4 md:p-0 rounded shadow-md md:shadow-none">
            <li><a class="hover:text-indigo-400" href="/main">Home</a></li>
            <li><a class="hover:text-indigo-400" href="/missions">Missions</a></li>
            <li><a class="hover:text-indigo-400" href="/grades">Grades</a></li>
            <li><a class="hover:text-indigo-400" href="/library">Library</a></li>
            <li><a class="hover:text-indigo-400" href="/profile">Profile</a></li>
            <li><a class="text-red-400 hover:text-red-300" href="/logout">Logout</a></li>
        </ul>
    </nav>
</header>

<script>
    document.getElementById("menuBtn")?.addEventListener("click", () => {
        document.getElementById("menu").classList.toggle("hidden");
    });
</script>
