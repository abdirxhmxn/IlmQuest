<%- include('partials/inHeader') %>

  <link href="https://cdn.jsdelivr.net/npm/daisyui@4.12.10/dist/full.min.css" rel="stylesheet" type="text/css" />
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>

  <style>
    :root {
      --primary: #59a063;
      --primary-hover: #26904d;
    }
  </style>

  <div class="min-h-screen bg-gradient-to-br from-emerald-50 via-white to-green-50 py-12 px-4">
    <div class="max-w-6xl mx-auto">

      <!-- Profile Card -->
      <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-emerald-100">

        <!-- Hero Header -->
        <div class="bg-gradient-to-r from-[var(--primary)] to-[var(--primary-hover)] p-8 text-white">
          <div class="flex flex-col md:flex-row items-center gap-8">
            <div class="relative">
              <div class="w-32 h-32 rounded-full overflow-hidden ring-8 ring-white/30 shadow-2xl">
                <img
                  src="<%= user.profilePic || 'https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg' %>"
                  alt="Profile" class="w-full h-full object-cover">
              </div>
              <div class="absolute bottom-0 right-0 bg-white rounded-full p-2 shadow-lg">
                <i data-lucide="camera" class="w-5 h-5 text-[var(--primary)]"></i>
              </div>
            </div>

            <div class="text-center md:text-left">
              <h1 class="text-4xl font-bold flex items-center gap-3">
                <%= user.firstName %>
                  <%= user.lastName %>
                    <span class="badge badge-lg badge-outline text-white border-white/50">
                      <%= user.role.toUpperCase() %>
                    </span>
              </h1>
              <p class="text-white/90 text-lg mt-2">@<%= user.userName %>
              </p>
              <p class="text-white/80 mt-1">Member since <%= new Date(user.createdAt).toLocaleDateString('en-US', {
                  year: 'numeric' , month: 'long' }) %>
              </p>
            </div>

            <div class="ml-auto">
              <a href="/logout" class="btn bg-white/20 hover:bg-white/30 text-white border-none backdrop-blur">
                <i data-lucide="log-out" class="w-5 h-5"></i>
                Logout
              </a>
            </div>
          </div>
        </div>

        <!-- Main Content -->
        <div class="p-8 lg:p-12">
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-10">

            <!-- Left: Personal Info -->
            <div class="space-y-6">
              <h2 class="text-2xl font-bold text-emerald-900 flex items-center gap-3">
                <i data-lucide="user" class="w-7 h-7 text-[var(--primary)]"></i>
                Personal Information
              </h2>

              <div class="bg-emerald-50/70 rounded-2xl p-6 space-y-5 border border-emerald-200">
                <div class="flex items-center gap-4">
                  <i data-lucide="mail" class="w-6 h-6 text-[var(--primary)]"></i>
                  <div>
                    <p class="text-sm text-gray-600">Email</p>
                    <p class="font-semibold text-emerald-900">
                      <%= user.email %>
                    </p>
                  </div>
                </div>

                <div class="flex items-center gap-4">
                  <i data-lucide="cake" class="w-6 h-6 text-[var(--primary)]"></i>
                  <div>
                    <p class="text-sm text-gray-600">Date of Birth</p>
                    <p class="font-semibold text-emerald-900">
                      <% if (user.DOB) { %>
                        <%= new Date(user.DOB).toLocaleDateString('en-US', { year: 'numeric' , month: 'long' ,
                          day: 'numeric' }) %>
                          <% } else { %>
                            Not provided
                            <% } %>
                    </p>
                  </div>
                </div>

                <div class="flex items-center gap-4">
                  <i data-lucide="calendar" class="w-6 h-6 text-[var(--primary)]"></i>
                  <div>
                    <p class="text-sm text-gray-600">Joined</p>
                    <p class="font-semibold text-emerald-900">
                      <%= new Date(user.createdAt).toLocaleDateString('en-US', { year: 'numeric' , month: 'long' ,
                        day: 'numeric' }) %>
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Center: Role-Specific Info -->
            <div class="space-y-6">
              <h2 class="text-2xl font-bold text-emerald-900 flex items-center gap-3">
                <i data-lucide="briefcase" class="w-7 h-7 text-[var(--primary)]"></i>
                Role Details
              </h2>

              <% if (user.role==='teacher' ) { %>
                <div class="bg-gradient-to-br from-emerald-50 to-green-50 rounded-2xl p-6 border border-emerald-200">
                  <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-bold text-emerald-900">Teacher</h3>
                    <i data-lucide="chalkboard" class="w-10 h-10 text-[var(--primary)] opacity-80"></i>
                  </div>
                  <% if (user.teacherInfo?.employeeId) { %>
                    <p class="text-sm"><strong>ID:</strong>
                      <%= user.teacherInfo.employeeId %>
                    </p>
                    <% } %>
                      <% if (user.teacherInfo?.subjects?.length> 0) { %>
                        <p class="text-sm mt-2"><strong>Subjects:</strong>
                          <%= user.teacherInfo.subjects.join(', ') %></p>
                <% } %>
                <p class="text-xs text-gray-600 mt-4">Empowering the next generation</p>
              </div>

            <% } else if (user.role === 'student') { %>
                            <div
                              class="bg-gradient-to-br from-blue-50 to-cyan-50 rounded-2xl p-6 border border-blue-200">
                              <div class="flex items-center justify-between mb-4">
                                <h3 class="text-lg font-bold text-blue-900">Student</h3>
                                <i data-lucide="graduation-cap" class="w-10 h-10 text-blue-600 opacity-80"></i>
                              </div>
                              <p class="text-sm"><strong>Classes:</strong>
                                <% if (classes && classes.length> 0) { %>
                                  <ul>
                                    <% classes.forEach(c=> { %>
                                      <li>
                                        <%= c.className %>
                                      </li>
                                      <% }) %>
                                  </ul>
                                  <% } else { %>
                                    N/A
                                    <% } %></p>

                                      <p class="text-sm"><strong>Grade Level:</strong>
                                        <%= user.studentInfo?.gradeLevel || 'N/A' %>
                                      </p>
                                      <p class="text-sm"><strong>Student ID:</strong>
                                        <%= user.studentInfo?.studentNumber || 'N/A' %>
                                      </p>
                                      <p class="text-sm"><strong>Program:</strong>
                                        <%= user.studentInfo?.programType %>
                                      </p>
                            </div>

                            <% } else if (user.role==='parent' ) { %>
                              <div
                                class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-2xl p-6 border border-purple-200">
                                <div class="flex items-center justify-between mb-4">
                                  <h3 class="text-lg font-bold text-purple-900">Parent</h3>
                                  <i data-lucide="heart" class="w-10 h-10 text-pink-600 opacity-80"></i>
                                </div>
                                <p class="text-sm">Guardian of <%= user.parentInfo?.children?.length || 0 %> student(s)
                                </p>
                                <% if (user.parentInfo?.children?.length> 0) { %>
                                  <div class="mt-3 space-y-1">
                                    <% user.parentInfo.children.forEach(child=> { %>
                                      <div class="text-xs bg-white/70 px-3 py-1 rounded-full inline-block mr-2">
                                        <%= child.childName %>
                                      </div>
                                      <% }) %>
                                  </div>
                                  <% } %>
                              </div>

                              <% } else if (user.role==='admin' ) { %>
                                <div
                                  class="bg-gradient-to-br from-amber-50 to-orange-50 rounded-2xl p-6 border border-amber-300">
                                  <div class="flex items-center justify-between mb-4">
                                    <h3 class="text-lg font-bold text-amber-900">Administrator</h3>
                                    <i data-lucide="shield" class="w-10 h-10 text-amber-700 opacity-80"></i>
                                  </div>
                                  <p class="text-sm font-medium">Full system access</p>
                                  <p class="text-xs text-amber-700 mt-3">Managing IlmQuest with care</p>
                                </div>
                                <% } %>
                </div>

                <!-- Right: Quick Actions -->
                <div class="space-y-6">
                  <h2 class="text-2xl font-bold text-emerald-900 flex items-center gap-3">
                    <i data-lucide="settings" class="w-7 h-7 text-[var(--primary)]"></i>
                    Quick Actions
                  </h2>

                  <div class="space-y-4">
                    <!-- Edit Profile Button -->
                    <button onclick="edit_modal.showModal()"
                      class="btn bg-[var(--primary)] hover:bg-[var(--primary-hover)] text-white w-full shadow-lg">
                      <i data-lucide="edit-3" class="w-5 h-5"></i>
                      Edit Profile
                    </button>

                    <!-- Edit Profile Modal -->
                    <dialog id="edit_modal" class="modal modal-bottom sm:modal-middle">
                      <div class="modal-box bg-white rounded-2xl shadow-2xl border border-emerald-200 max-w-lg">
                        <div class="flex justify-between items-center mb-6">
                          <h3 class="text-2xl font-bold text-emerald-900 flex items-center gap-3">
                            <i data-lucide="user-cog" class="w-7 h-7 text-[var(--primary)]"></i>
                            Edit Profile
                          </h3>
                          <button onclick="edit_modal.close()" class="btn btn-ghost btn-circle">
                            <i data-lucide="x" class="w-6 h-6"></i>
                          </button>
                        </div>

                        <!-- MAIN FORM -->
                        <form action="/profile/edit-profile/<%= user._id %>?_method=PUT" method="POST"
                          class="space-y-5">



                          <div>
                            <label class="block text-sm font-semibold text-emerald-800 mb-2">Username</label>
                            <input type="text" name="userName" value="<%= user.userName %>"
                              class="input input-bordered w-full bg-emerald-50 border-emerald-300" required>
                          </div>


                          <div class="grid grid-cols-2 gap-4">
                            <div>
                              <label class="block text-sm font-semibold text-emerald-800 mb-2">New Password</label>
                              <input type="password" name="password" placeholder="Leave blank to keep"
                                class="input input-bordered w-full bg-emerald-50 border-emerald-300">
                            </div>
                            <div>
                              <label class="block text-sm font-semibold text-emerald-800 mb-2">Confirm</label>
                              <input type="password" name="confirmPassword" placeholder="Confirm password"
                                class="input input-bordered w-full bg-emerald-50 border-emerald-300">
                            </div>
                          </div>

                          <!-- Buttons -->
                          <div class="flex justify-end gap-4 pt-6">
                            <button type="button" onclick="edit_modal.close()" class="btn btn-ghost text-gray-600">
                              Cancel
                            </button>
                            <button type="submit"
                              class="btn bg-[var(--primary)] hover:bg-[var(--primary-hover)] text-white px-8 shadow-lg">
                              <i data-lucide="save" class="w-5 h-5"></i>
                              Save Changes
                            </button>
                          </div>
                        </form>
                      </div>

                      <!-- Click outside to close -->
                      <form method="dialog" class="modal-backdrop">
                        <button>close</button>
                      </form>
                    </dialog>
                  </div>


                  <!-- <a href="/settings"
                    class="btn btn-outline border-emerald-300 text-emerald-800 hover:bg-emerald-50 w-full">
                    <i data-lucide="sliders-horizontal" class="w-5 h-5"></i>
                    Account Settings
                  </a> -->
                  <% if (user.role==='teacher' ) { %>
                    <a href="/teacher/home"
                      class="btn bg-white border-2 border-[var(--primary)] text-[var(--primary)] hover:bg-emerald-50 w-full">
                      <i data-lucide="chalkboard" class="w-5 h-5"></i>
                      Teacher Dashboard
                    </a>
                    <% } %>
                </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Stats Footer -->

    </div>
  </div>

  <script>
    lucide.createIcons();
    const editDial = document.querySelector('#edit')
    const editbtn = document.querySelector('#edit-button')
    const modal = document.getElementById('edit_modal');
    modal.addEventListener('close', () => lucide.createIcons());
    modal.addEventListener('click', (e) => {
      if (e.target === modal) modal.close();
    });
    modal.addEventListener('close', () => lucide.createIcons());
  </script>

  <!-- Role-specific footer -->
  <% if (user.role==='teacher' ) { %>
    <%- include('partials/teacherFooter') %>
      <% } else if (user.role==='student' ) { %>
        <%- include('partials/inFooter') %>
          <% } else if (user.role==='admin' ) { %>
            <%- include('partials/adminFooter') %>
              <% } %>