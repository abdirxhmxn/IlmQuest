<%- include('partials/header') -%>

<link rel="stylesheet" href="/css/pages/auth.css" />

  <div class="auth-shell">
    <div class="auth-panel">

      <!-- Logo + Title -->
      <div class="logo-section">
        <img src="/imgs/finalLogo.jpg" alt="IlmQuest Logo" class="logo-img logo-img-auth">
        <h1 class="logo-title">IlmQuest</h1>
        <p class="auth-subtitle">Welcome back! Please sign in</p>
      </div>

      <!-- Flash Messages -->
      <% if (messages && (messages.errors || messages.info)) { %>
        <div class="flash-messages">
          <% if (messages.errors) { %>
            <% messages.errors.forEach(msg=> { %>
              <div class="flash-message flash-error">
                <%= msg.msg %>
              </div>
              <% }) %>
                <% } %>
                  <% if (messages.info) { %>
                    <% messages.info.forEach(msg=> { %>
                      <div class="flash-message flash-info">
                        <%= msg.msg %>
                      </div>
                      <% }) %>
                        <% } %>
        </div>
        <% } %>

          <!-- Login Form -->
          <form action="/login" method="POST" class="form-card">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

            <!-- Email -->
            <div class="form-group">
              <label for="email" class="form-label">Email Address</label>
              <input type="email" id="email" name="email" class="form-input" placeholder="you@example.com"
                autocomplete="email" required />
            </div>

            <!-- Password -->
            <div class="form-group">
              <div class="password-group">
                <label for="password" class="form-label">Password</label>
                <a href="/forgot-password" class="forgot-link">Forgot?</a>
              </div>

              <input type="password" id="password" name="password" class="form-input" placeholder="********"
                autocomplete="current-password" required />
            </div>

            <!-- Submit -->
            <button type="submit" class="submit-btn">
              Sign In
            </button>

          </form>


          <div class="signup-link">
            New to IlmQuest? <a href="/signup">Create an account</a>
          </div>

    </div>
  </div>

  <%- include('partials/footer') -%>
